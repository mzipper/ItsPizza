extends layout.pug

block content
    div.contactform
        center
            h2 Contact Us Form
            form(action='/contact-us' name='contactForm' method='post')
                label Name:
                input#name(type='text' name='name' size='30' placeholder='enter name')
                br
                br
                label Email:
                input#email(type='email' name='email' size='30' placeholder='enter email')
                br
                br
                label Subject:
                input#subject(type='text' name='subject' size='30' placeholder='enter subject')
                br
                br
                label Message:
                textarea#message(name='message' rows='3' cols='30' placeholder='type message here...')
                br
                br
                input(type='SUBMIT' name='submit' value='Submit')
